{{!-- Notes Modal --}}
<div class="modal fade" tabindex="-1" role="dialog" id="note-modal">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron jumbotron-fluid text-center">
    <div class="container">
        <h1 class="display-4 pt-5 mt-5">Saved Articles</h1>
        <p class="lead">Your Saved Articles</p>
    </div>
</div>

<div class="container">
    {{#each articles}}
    <div class="card m-3">
        <div class="card-header">
            <a href="{{link}}" target="_blank" class="title">{{title}}</a>
            <a href="/delete" class="btn btn-danger delete-btn" data-id="{{_id}}">Delete From Saved</a>
            <a href="#" class="btn btn-warning note-btn" data-id="{{_id}}">Article Notes</a>
        </div>
        <div class="card-body">
            <p class="card-text">{{summary}}</p>
        </div>
    </div>
    {{/each}}
</div>